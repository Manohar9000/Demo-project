  <build>
<plugins>
<plugin>
    <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
    <version>3.0.0-M5</version>
<configuration>
  <includes>
     <include>TestRunner.java</include>
   </includes>
</configuration>
</plugin>
<plugin>
  <groupId>net.masterthought</groupId>
    <artifactId>maven-cucumber-reporting</artifactId>
     <version>5.6.0</version>
<executions>
<execution>
<id>execution</id>
<phase>verify</phase>
        <goals>
           <goal>generate</goal>
        </goals>
        <configuration>
         <projectName>Cyclos Reports</projectName>
         <skip>false</skip>
         <outputDirectory>C:\Users\MANOHAR\eclipse-workspace\POM_Cucumber\target\report</outputDirectory>
         <inputDirectory>C:\Users\MANOHAR\eclipse-workspace\POM_Cucumber\target\report</inputDirectory>
     <jsonFiles>
     <param>**/*.json</param>
     </jsonFiles>
     <mergeFeaturesById>false</mergeFeaturesById>
      <mergeFeaturesWithRetest>false</mergeFeaturesWithRetest>
      <checkBuildResult>false</checkBuildResult>
          </configuration>
         </execution>
        </executions>
      </plugin>
      </plugins>
    </build> 
